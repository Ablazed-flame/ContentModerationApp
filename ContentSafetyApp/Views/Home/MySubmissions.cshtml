@model IEnumerable<ContentModerationApp.ViewModels.SubmissionSummaryViewModel>
@{
    ViewData["Title"] = "My Submissions";
}

<div class="container my-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="h4 mb-0">
                    <i class="fas fa-history me-2"></i>My Content Submissions
                </h2>
                <a asp-controller="Home" asp-action="Submit" class="btn btn-light btn-sm">
                    <i class="fas fa-plus me-1"></i>New Submission
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="empty-state">
                        <i class="fas fa-inbox fa-4x text-muted mb-4"></i>
                        <h3 class="h5">No submissions yet</h3>
                        <p class="text-muted">You haven't submitted any content for moderation.</p>
                        <a asp-controller="Home" asp-action="Submit" class="btn btn-primary mt-3">
                            <i class="fas fa-cloud-upload-alt me-1"></i>Make your first submission
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Submitted</th>
                                <th>Content Preview</th>
                                <th>Media</th>
                                <th>Status</th>
                                <th>Summary</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <a asp-controller="Home" asp-action="Result" asp-route-id="@item.Id" class="text-decoration-none text-dark d-block">
                                            <div class="fw-semibold humanize">@item.SubmittedAt.ToString("O")</div>
                                        </a>
                                    </td>

                                    <td>
                                        <a asp-controller="Home" asp-action="Result" asp-route-id="@item.Id" class="text-decoration-none text-body d-block">
                                            <div class="text-preview">
                                                @if (!string.IsNullOrEmpty(item.TextContent))
                                                {
                                                    @(item.TextContent.Length > 50 ? item.TextContent.Substring(0, 50) + "..." : item.TextContent)
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No text content</span>
                                                }
                                            </div>
                                        </a>
                                    </td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <a href="@item.ImagePath" data-lightbox="submission-@item.Id" data-title="Submitted Image">
                                                <img src="@item.ImagePath" class="img-thumbnail" style="max-height:60px; max-width:80px;" alt="Submission image" />
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No image</span>
                                        }
                                    </td>

                                    <td>
                                        <a asp-controller="Home" asp-action="Result" asp-route-id="@item.Id" class="text-decoration-none d-block">
                                            @{
                                                var finalFlag = item.AdminOverrideFlag.HasValue ? item.AdminOverrideFlag.Value : item.IsFlagged;
                                                var statusColor = finalFlag ? "danger" : "success";
                                                var statusIcon = finalFlag ? "fa-flag" : "fa-check";
                                                var statusText = finalFlag ? "Flagged" : "Clean";
                                                var overrideBadge = item.AdminOverrideFlag.HasValue ? " (Admin)" : "";
                                            }
                                            <span class="badge bg-@statusColor rounded-pill">
                                                <i class="fas @statusIcon me-1"></i>@statusText@overrideBadge
                                            </span>
                                        </a>
                                    </td>

                                    <td>
                                        <a asp-controller="Home" asp-action="Result" asp-route-id="@item.Id" class="text-decoration-none text-muted d-block">
                                            <div class="moderation-summary">
                                                @if (!string.IsNullOrEmpty(item.ModerationSummary))
                                                {
                                                    <span class="d-inline-block text-truncate" style="max-width: 200px;"
                                                          data-bs-toggle="tooltip" data-bs-placement="top" title="@item.ModerationSummary">
                                                        @item.ModerationSummary
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>No summary</span>
                                                }
                                            </div>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        @if (Model.Any())
        {
            <div class="card-footer bg-light py-3 rounded-bottom-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        Showing @Model.Count() submissions
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css" />
    <link rel="stylesheet" href="~/css/my-submissions.css" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/HumanizeDuration.js/1.2.2/humanize-duration.min.js"></script>
    <script src="~/js/my-submissions.js"></script>
}